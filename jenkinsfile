pipeline {
    agent none

    stages {
        stage('Build') {
            steps {
                echo 'Building..'
                docker build . -t testflask:latest
                docker run -d -p 8000:8000 testflask:latest
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
                docker exec testflask python flasktests.py
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
                sh 'python3 flask.py'
            }
        }
    }
}
