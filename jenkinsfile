pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo 'Building..'
                sh 'pip install Flask'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
                sh 'python flasktests.py'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
                sh 'python flask.py'
            }
        }
    }
}
