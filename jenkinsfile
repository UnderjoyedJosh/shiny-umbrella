pipeline {
    agent none

    stages {
        stage('Build') {
            agent {
                docker {
                    image 'centos:centos7'
                }
            }
            steps {
                echo 'Building..'
                withEnv(["HOME=${env.WORKSPACE}"]) {
                    sh 'yum install -y python3 python3-pip'
                    sh 'pip3 install flask'
                }
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
                sh 'python flasktests.py'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
                sh 'python3 flask.py'
            }
        }
    }
}
