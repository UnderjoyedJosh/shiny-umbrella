pipeline {
    agent none

    stages {
        stage('Build') {
            agent {
                docker {
                    image 'python:latest'
                }
            }
            steps {
                echo 'Building..'
                withEnv(["HOME=${env.WORKSPACE}"]) {
                    sh 'pip install --user flask'
                }
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
                sh 'python flasktests.py'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
                sh 'python flask.py'
            }
        }
    }
}
